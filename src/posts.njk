---
layout: layouts/page
permalink: /posts/
title: 'Posts'
eleventyExcludeFromCollections: true
eleventyNavigation:
  key: Archive
  order: 2
---

{% for tag, posts in collections | dictsort %}
  {% if tag != 'all' and tag != 'posts' %}
  <h2 id="{{tag}}">{{ tag }}</h2>
  <ul class="posts-list">
  {% for post in posts %}
    <li>
      <strong>
        <a href="{{ post.url }}">{{ post.data.title }}</a>
      </strong>
      <span class="post-date">- {{ post.date | localeDateString(post.data.lang or 'en') }}</span>
    </li>
  {% endfor %}
  </ul>
  {% if loop.last == false %}<hr>{% endif %}
  {% endif %}
{% endfor %}
<br> 
